{
  "name": "create-fastify-boot",
  "version": "1.0.7",
  "description": "Set up a Fastify Boot app with one command.",
  "keywords": [
    "fastify",
    "rest",
    "fastify-boot",
    "api",
    "server"
  ],
  "repository": "https://github.com/burketyler/create-fastify-boot",
  "author": "Tyler Burke",
  "main": ".build/index.js",
  "license": "MIT",
  "files": [
    ".build",
    "template",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "create-fastify-boot": ".build/cli.js"
  },
  "scripts": {
    "clean": "rm -rf .build",
    "build": "yarn clean && tsc && chmod +x .build/cli.js",
    "prettier": "prettier --check bin/**/*.ts --loglevel error",
    "lint": "eslint bin/**/*.ts",
    "verify": "yarn prettier && yarn lint",
    "cm": "git-cz"
  },
  "dependencies": {
    "chalk": "4.1.2",
    "cross-spawn": "7.0.3",
    "fastify-boot": "1.0.14",
    "fs-extra": "10.0.0",
    "ts-injection": "1.2.0",
    "yargs": "17.2.1"
  },
  "devDependencies": {
    "@semantic-release/git": "10.0.1",
    "@types/cross-spawn": "6.0.2",
    "@types/fs-extra": "9.0.13",
    "@types/jest": "27.0.2",
    "@types/node": "16.11.7",
    "@typescript-eslint/eslint-plugin": "5.3.1",
    "@typescript-eslint/parser": "5.3.1",
    "commitizen": "4.2.4",
    "commitlint": "14.1.0",
    "cz-customizable": "6.3.0",
    "eslint": "8.2.0",
    "eslint-config-prettier": "8.3.0",
    "jest": "27.3.1",
    "prettier": "2.4.1",
    "semantic-release": "18.0.0",
    "ts-jest": "27.0.7",
    "typescript": "4.3.5"
  },
  "release": {
    "branches": [
      "master"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "CHANGELOG.md"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "commitizen.config.js"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
